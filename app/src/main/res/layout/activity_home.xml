<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
    </data>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.home.HomeActivity">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/heading">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/ic_logo_blue"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/login_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_msg"
            android:layout_below="@id/logo"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="10pt"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginTop="10dp"
        android:layout_above="@id/bottom_menu"
        android:layout_marginBottom="20dp"/>

  <!--  <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>-->


        <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
        android:id="@+id/dot_progressBar"
            android:text="@string/loading"
        app:loader_animDur="1000"
        app:loader_noOfDots="8"
        app:loader_circleRadius="6dp"
        app:loader_defaultColor="@color/dot_bar1"
        app:loader_selectedColor="@color/blue"
        app:loader_dotsDist="4dp"
        app:loader_expandOnSelect="false"
        app:loader_isSingleDir="false"
        app:loader_selectedRadius="10dp"
        app:loader_showRunningShadow="true"
        app:loader_firstShadowColor="@color/dot_bar2"
        app:loader_secondShadowColor="@color/dot_bar2"/>
        <!--app:loader_thirdShadowColor="@color/dot_bar3" -->

    <!--<TextView
        android:id="@+id/progressBarMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading, please wait..."
        android:layout_centerInParent="true"
        android:layout_above="@id/dot_progressBar"
        android:background="#00000000" />-->
    <TextView
        android:id="@+id/progressBarMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_progressBar"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:text="Loading..."
        android:textSize="20dp" />



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/home_bottom_menu"
        android:background="@color/button_color"/>

</RelativeLayout>
</layout>