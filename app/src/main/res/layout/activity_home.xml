<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.home.HomeActivity">

        <RelativeLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/heading">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_logo_blue" />

            <TextView
                android:id="@+id/login_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/login_msg"
                android:textColor="@color/black"
                android:textSize="10pt" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_menu"
            android:layout_below="@id/heading"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <!--  <ProgressBar
              android:id="@+id/progressBar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:visibility="gone"/>-->


        <include
            android:id="@+id/dot_progressBar"
            layout="@layout/progressbar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--app:loader_thirdShadowColor="@color/dot_bar3" -->

        <!--<TextView
            android:id="@+id/progressBarMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading, please wait..."
            android:layout_centerInParent="true"
            android:layout_above="@id/dot_progressBar"
            android:background="#00000000" />-->
        <!--<TextView
            android:id="@+id/progressBarMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dot_progressBar"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:text="Loading..."
            android:textSize="20dp" />-->


        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/button_color"
            app:menu="@menu/home_bottom_menu" />

    </RelativeLayout>
</layout>