<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="mainHeader"
            type="com.orangeskill.elate.feature.home.model.MainHeader" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="center"
            android:fitsSystemWindows="true"
            app:mainImage="@{mainHeader.imageUrl}"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_button"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/transparent_img"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo_white"/>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="9pt"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/transparent_img"
            android:text="@{mainHeader.name}"/>

        <TextView
            android:id="@+id/subCat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="9pt"
            android:layout_below="@id/name_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@{mainHeader.subCategory}"/>

        <TextView
            android:id="@+id/note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_image"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="@{mainHeader.note}"/>

        <TextView
            android:id="@+id/curatedBy_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_text"
            android:layout_marginLeft="15dp"
            android:textColor="@color/button_color"
            android:text="@{mainHeader.curatedBy}"/>

        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/popup_grey"
            android:layout_below="@id/curatedBy_txt"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>

</RelativeLayout>
</layout>