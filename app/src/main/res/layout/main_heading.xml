<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="mainHeader"
            type="com.orangeskill.elate.feature.home.model.MainHeader" />
    </data>

<RelativeLayout
    android:id="@+id/main_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/main_image_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dot_bar1">


        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:scaleType="fitXY"
            android:fitsSystemWindows="true"
            app:mainImage="@{mainHeader.imageUrl}"
            android:src="@drawable/ic_icon_elate" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="1dp"
                    app:srcCompat="@drawable/ic_back_button_round" />
        <!--<ImageView
            android:id="@+id/transparent_img"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo_white"/>-->

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignEnd="@+id/note_text"
                    android:layout_alignRight="@+id/note_text"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"

                    android:src="@drawable/ic_back_button"

                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_image"
                    android:layout_marginLeft="5dp"
                    android:textSize="9pt"
                    android:textColor="@color/white"
                    android:text="@{mainHeader.name}"/>

             <!--   <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:text="@{mainHeader.name}"
                    android:textColor="@color/white"
                    android:textSize="9pt" />-->

                <TextView
                    android:id="@+id/note_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:text="@{mainHeader.note}"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curatedBy_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/note_text"
                    android:layout_marginLeft="5dp"

                    android:text="@{mainHeader.curatedBy}"
                    android:textColor="@color/white" />
                <!--android:text="@{mainHeader.curatedBy}"-->

             <!--   <TextView
                    android:id="@+id/subCat_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="9pt"
                    android:layout_below="@id/name_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="bottom"
                    android:text="@{mainHeader.subCategory}"/>-->

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        android:background="#f3f3f3"
        android:text="Overview"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/image_overview"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_alignRight="@id/tv_overview"
        android:layout_marginTop="28dp"
        android:layout_marginRight="4dp"
        app:srcCompat="@drawable/ic_right_side_arrow_button" />

    <TextView
        android:id="@+id/tv_overview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_overview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="text for test"
        android:textSize="25dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#f3f3f3"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@id/tv_overview2"/>

    <ImageView
        android:id="@+id/image_schedule"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_overview2"
        android:layout_alignRight="@id/tv_schedule"
        android:layout_marginTop="28dp"
        android:layout_marginRight="4dp"
        app:srcCompat="@drawable/ic_right_side_arrow_button" />


          <!--<TextView
                android:id="@+id/note_text"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_below="@id/main_image"
                android:layout_gravity="bottom"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:textColor="@color/white"
                android:background="@color/dot_bar1"
                android:text="@{mainHeader.note}" />-->


        <!--<View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/popup_grey"

            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>-->
        <!--android:layout_below="@id/curatedBy_txt"-->




</RelativeLayout>
</layout>